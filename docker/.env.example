# Docker Compose Environment Variables
# Copy this file to .env and update with your actual values
# .env is excluded from Git via .gitignore

# PostgreSQL Database
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Semaphore Web Interface
SEMAPHORE_PORT=3000
SEMAPHORE_ADMIN=admin
SEMAPHORE_ADMIN_PASSWORD=your_secure_admin_password_here
SEMAPHORE_ADMIN_NAME=Admin
SEMAPHORE_ADMIN_EMAIL=admin@localhost

# Semaphore Access Key Encryption (generate with: head -c32 /dev/urandom | base64)
SEMAPHORE_ACCESS_KEY_ENCRYPTION=

# Mesh Network Variables (for Ansible playbooks)
# These are passed through to the Ansible container
MESH_PASSWORD=your_mesh_password_here
CLIENT_PASSWORD=your_client_password_here
GUEST_PASSWORD=your_guest_password_here
MESH_ID=ha-mesh-net
CLIENT_SSID=HA-Network-5G
